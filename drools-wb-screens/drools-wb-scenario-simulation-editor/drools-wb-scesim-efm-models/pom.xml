<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.drools</groupId>
    <artifactId>drools-wb-scenario-simulation-editor</artifactId>
    <version>7.23.0-SNAPSHOT</version>
  </parent>

  <artifactId>drools-wb-scesim-efm-models</artifactId>
  <packaging>jar</packaging>

  <name>Drools Workbench - Scenario Simulation Editor - EFM Models</name>
  <description>Drools Workbench - Scenario Simulation Editor - EFM Models</description>

  <properties>
    <java.module.name>org.drools.scesim</java.module.name>

    <!-- Setting maven.compiler.source to something different to 1.8
         needs that you configure the sourceLevel in gwt-maven-plugin since
         GWT compiler 2.8 requires 1.8 (see gwt-maven-plugin block below) -->
    <maven.compiler.source>1.8</maven.compiler.source>
    <maven.compiler.target>1.8</maven.compiler.target>

    <!-- Don't let your Mac use a crazy non-standard encoding -->
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    <jaxb.version>2.2.12</jaxb.version> <!-- Needed due to unsupported JEP-238 in Jetty shipped with GWT plugin -->
  </properties>

  <dependencies>
    <dependency>
      <groupId>org.submarine</groupId>
      <artifactId>org.eclipse.emf.ecore.xmi</artifactId>
    </dependency>
    <dependency>
      <groupId>org.submarine</groupId>
      <artifactId>org.eclipse.emf.ecore.xmi</artifactId>
      <classifier>sources</classifier>
    </dependency>
    <dependency>
      <groupId>org.eclipselabs</groupId>
      <artifactId>org.eclipse.emf.gwt.ecore</artifactId>
    </dependency>
    <dependency>
      <groupId>com.google.gwt</groupId>
      <artifactId>gwt-servlet</artifactId>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <groupId>com.google.gwt</groupId>
      <artifactId>gwt-user</artifactId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>com.google.gwt</groupId>
      <artifactId>gwt-dev</artifactId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>com.google.gwt.gwtmockito</groupId>
      <artifactId>gwtmockito</artifactId>
      <scope>test</scope>
    </dependency>
    <!-- TRANSITIVE -->
    <dependency>
      <groupId>org.eclipselabs</groupId>
      <artifactId>org.eclipse.emf.gwt.common</artifactId>
    </dependency>

  </dependencies>

  <dependencyManagement>
    <dependencies>
      <!-- CLIENT-SIDE MARSHALLING -->
      <dependency>
        <groupId>org.eclipselabs</groupId>
        <artifactId>org.eclipse.emf.gwt.ecore</artifactId>
        <version>2.9.0</version>
      </dependency>
      <dependency>
        <groupId>org.eclipselabs</groupId>
        <artifactId>org.eclipse.emf.gwt.common</artifactId>
        <version>2.9.0</version>
      </dependency>
      <dependency>
        <groupId>org.submarine</groupId>
        <artifactId>org.eclipse.emf.ecore.xmi</artifactId>
        <version>1.0-SNAPSHOT</version>
      </dependency>
      <dependency>
        <groupId>org.submarine</groupId>
        <artifactId>org.eclipse.emf.ecore.xmi</artifactId>
        <classifier>sources</classifier>
        <version>1.0-SNAPSHOT</version>
      </dependency>
    </dependencies>
  </dependencyManagement>

  <build>

    <plugins>
      <!-- GWT Maven Plugin-->
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>gwt-maven-plugin</artifactId>
<!--        <version>2.8.2</version>-->
        <executions>
          <execution>
            <goals>
              <goal>compile</goal>
<!--              <goal>generateAsync</goal>-->
              <goal>test</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <module>org.drools.ScesimEfmSubmarine</module>
          <style>PRETTY</style>
          <compileReport>true</compileReport>
          <soycDetailed>true</soycDetailed>
          <logLevel>INFO</logLevel>
          <noServer>false</noServer>
          <superDevMode>true</superDevMode>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-source-plugin</artifactId>
        <executions>
          <execution>
            <id>attach-sources</id>
            <goals>
              <goal>jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>

    </plugins>
  </build>
</project>