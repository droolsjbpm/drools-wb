<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:gwt='urn:import:com.google.gwt.user.client.ui'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui">

  <ui:with field="i18n" type="org.drools.workbench.screens.scenariosimulation.client.resources.i18n.ScenarioSimulationEditorConstants"/>

  <ui:style>
    .inlineAlign {
      text-align: center;
    }
  </ui:style>

  <b:Container fluid="true">
    <b:Row>
      <b:Label ui:field="successPanel" type="SUCCESS" addStyleNames="col-md-12" visible="false" text="{i18n.ScenarioSimulationEditorTitle}"/>
      <b:Label ui:field="failurePanel" type="DANGER" addStyleNames="col-md-12" visible="false" text="{i18n.ScenarioSimulationEditorTitle}"/>
    </b:Row>
    <b:Row>
      <b:Column size="MD_12">
        <b:Container>
          <b:Row>
            <gwt:InlineLabel ui:field="stats" addStyleNames="col-md-12 {style.inlineAlign}"/>
          </b:Row>
        </b:Container>
      </b:Column>
    </b:Row>
    <b:Row ui:field="dataGridHost"/>
  </b:Container>

</ui:UiBinder>
